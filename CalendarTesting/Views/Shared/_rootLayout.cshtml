    <script>
        window.onresize = function ()
        {
            var min_width = 975;
            if (/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) == false) {


                var original_screen_width = window.screen.availWidth;
                var original_screen_height = window.screen.availHeight;

                var result_width = window.screen.availWidth;
                //- (window.outerWidth);


                if (window.innerWidth < min_width) //(window.innerWidth < result_width)
                    var div_content = document.getElementsByClassName("body-content").item(0).style.width = "auto";
                else
                    var div_content = document.getElementsByClassName("body-content").item(0).style.width = "50%";

            }
        }

        window.onload = function ()
        {
            
            if (/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) == false) {
                var result_width = window.screen.availWidth;

                if (window.innerWidth < result_width)
                    var div_content = document.getElementsByClassName("body-content").item(0).style.width = "auto";
                else
                    var div_content = document.getElementsByClassName("body-content").item(0).style.width = "50%";
            }
       }
    </script>


    <script>
        function resizeToMinimum(w, h) {
            w = w > window.outerWidth ? w : window.outerWidth;
            h = h > window.outerHeight ? h : window.outerHeight;
            window.resizeTo(w, h);
        };
        window.addEventListener('resize', function () { resizeToMinimum(300, 300) }, false)
    </script>

